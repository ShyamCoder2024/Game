# ==========================================
# MATKA PLATFORM — Environment Variables
# ==========================================
# Copy this file to .env and fill in actual values
# NEVER commit .env to git

# Database (PostgreSQL 16)
DATABASE_URL=postgresql://matka_user:matka_secret_2026@localhost:5432/matka_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
JWT_EXPIRY_SECONDS=86400

# Admin Credentials (HARDCODED — only developer changes)
ADMIN_ID=ADMIN001
ADMIN_PASSWORD=admin@matka2026

# Server
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
SOCKET_CORS_ORIGIN=http://localhost:3000

# AWS S3 (for backups and banners — configure later)
AWS_S3_BUCKET=matka-backups
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1

# WhatsApp (default, can be changed from Admin panel)
DEFAULT_WHATSAPP_NUMBER=+919999999999
